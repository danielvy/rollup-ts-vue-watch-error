{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"moduleResolution": "node",
		"outDir": "../../out/app",
		"baseUrl": "..",
		"declaration": false,		
		"strict": true,
		"experimentalDecorators": true,
		"sourceMap": true,	
		"allowSyntheticDefaultImports": true,
	},	
	"include": [
		"**/*.vue",
		"**/*.ts",
	],
	"exclude": [
		"node_modules",
	]
}
